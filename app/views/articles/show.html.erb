<p>
    <strong>Title:</strong>
    <%= @article.title %>
</p>

<p>
    <strong>Text:</strong>
    <%= @article.text %>
</p>

<table>
    <tr>
        <th>Commenter</th>
        <th>Body</th>
        <th></th>
    </tr>

    <% @article.comments.each do |comment| %>
    <tr>
        <td><%= comment.commenter %></td>
        <td><%= comment.body %></td>
    </tr>
    <% end %>
</table>


<%# create a create-comment section here 
  scope: article_comment
  url: What is the best url for "create (POST)"? POST /articles/:id/comments
  label commenter
  text_filed commenter
  label comment body
  text_area comment body
  submit button
%>

<h2> Add a comment </h2>
<%= form_with model: [@article, @article.comments.build], local: true do |f| %>
<p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
</p>
<p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>

<%= link_to  "Edit Article", edit_article_path(id:@article.id) %><br>
<%= link_to  "Back", articles_path %>